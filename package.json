{
  "name": "ark-todo-notes",
  "version": "1.2.0",
  "description": "A Notes App",
  "main": "main.js",
  "build": {
    "appId": "com.ark.notesapp",
    "productName": "A Notes App",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "arch": [
        "x64",
        "arm64"
      ]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build"
    }
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0"
  },
  "author": {
    "name": "ark",
    "email": "ark@arc360hub.com"
  }
}
